#!/usr/bin/env python3
"""
DevFoam Web Launcher
Launch the web-based CAD to G-code converter
"""

import sys
import os

# Add src directory to path
sys.path.insert(0, os.path.join(os.path.dirname(os.path.abspath(__file__)), 'src'))

from devfoam.web.app import app

if __name__ == '__main__':
    print("=" * 60)
    print("DevFoam Web Application")
    print("G-code Generator for Foam Cutting")
    print("=" * 60)
    print("\nStarting web server...")
    print("\nAccess the application at:")
    print("  Local:   http://localhost:5001")
    print("  Network: http://0.0.0.0:5001")
    print("\nPress Ctrl+C to stop the server\n")
    print("=" * 60)

    app.run(debug=True, host='0.0.0.0', port=5001)
